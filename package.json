{
  "name": "@maprixcom/sysinfo",
  "version": "1.0.3",
  "description": "Comprehensive system information collector for Windows machines using WinRM",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src/powershell"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && npm run copy-ps1",
    "test": "ts-node src/test.ts",
    "copy-ps1": "mkdir -p dist/src/powershell && cp src/powershell/*.ps1 dist/src/powershell/",
    "prepare": "npm run build",
    "start:dev": "ts-node-dev index.ts",
    "start:prod": "node dist/index.js",
    "debug:dev": "cross-env TS_NODE_CACHE=false ts-node-dev --inspect --ignore '/^src/.*\\.spec\\.ts$/' src/index.ts",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-sonarjs": "^0.24.0",
    "eslint-plugin-unicorn": "^51.0.1",
    "mkdirp": "^3.0.1",
    "prettier": "^3.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "nodejs-winrm": "^1.1.3"
  }
}
